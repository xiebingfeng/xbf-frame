<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/base_navigation_container_padding_top"
    android:paddingBottom="@dimen/base_navigation_container_padding_bottom"
    tool:layout_width="@dimen/base_100">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_bottom_item"
        android:layout_width="@dimen/base_navigation_iv_width"
        android:layout_height="@dimen/base_navigation_iv_height"
        android:paddingStart="@dimen/base_navigation_iv_padding_left"
        android:paddingTop="@dimen/base_navigation_iv_padding_top"
        android:paddingEnd="@dimen/base_navigation_iv_padding_right"
        android:paddingBottom="@dimen/base_navigation_container_padding_bottom"
        android:scaleType="centerInside"
        tool:src="@drawable/frame_nav_ic_default" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_bottom_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/frame_navigation_text_font_color"
        android:textSize="@dimen/base_navigation_text_size"
        tool:text="首页" />

</LinearLayout>