<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/frame_loading_dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/base_30"
    android:paddingTop="@dimen/base_20"
    android:paddingEnd="@dimen/base_30"
    android:paddingBottom="@dimen/base_20">

    <com.krt.frame.frame.dialog.view.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/base_80"
        android:layout_height="@dimen/base_80"
        wheel:matProg_barColor="@color/base_loading_view_color1"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_15"
        android:layout_marginEnd="@dimen/base_15"
        android:gravity="start"
        android:text="请稍等..."
        android:textColor="@color/base_deep_grey"
        android:textSize="@dimen/font_size_16" />

</LinearLayout>